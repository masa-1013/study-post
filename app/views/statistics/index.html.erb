<%# jqueryがうまく働かないためこの処理で代用 %>
<% day, week, month = "" %>
<% if @date == "week"%>
  <% week = "active" %>
<% elsif @date ==  "month"%>
  <% month = "active" %>
<% else %>
  <% day = "active" %>
<% end %>
<div class="row">
  <div class="col-sm-10 offset-sm-1">
    <ul class="nav nav-tabs nav-justified">
      <li class="nav-item">
        <a href="index?date=day" class="nav-link <%= day %>">日</a>
      </li>
      <li class="nav-item">
        <a href="index?date=week" class="nav-link <%= week %>">週</a>
      </li>
      <li class="nav-item">
        <a href="index?date=month" class="nav-link <%= month %>">月</a>
      </li>
    </ul>
    <div class="chart">
      <h3>学習時間(合計)</h3>
      <%= column_chart @study_column_chart %>
    </div>
    <div class="chart">
     <h3>時間配分(カテゴリ)</h3>
     <%= pie_chart @study_pie_chart, legend: "right" %>
    </div>
  </div>
</div>

