<% if study.errors.present? %>
  <ul class="alert alert-warning" >
    <% study.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<div class='row justify-content-center'>
  <%= form_with model: study, local: true do |f| %>
    <div class='form-group' >
      <%= f.date_field :date, value: Date.today, class: 'form-control' %>
    </div>
    <div class='form-group'>
      <%= f.label :勉強時間 %>
      <% if study.time.nil? %>
        <%= f.time_field :time, value: "00:00", class:'form-control' %>
      <% else %>
        <%= f.time_field :time, class:'form-control' %>
      <% end %>
    </div>
    <div class='form-group'>
      <%= f.label :カテゴリ %>
      <%= f.text_field :title, class:'form-control' %>  
    </div>
    <div class='form-group'>
      <%= f.label :内容 %>
      <%= f.text_area :content, class:'form-control' %>  
    </div>
    <%= f.submit '投稿', class:'btn btn-primary' %>
  <% end %>
</div>