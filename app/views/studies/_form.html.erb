<div class="row">
  <div class="col-sm-6 offset-sm-3">
    <%= render partial: "shared/errors_full_messages", locals: { model: study } %>
    <%= form_with model: study, local: true do |f| %>
      <div class='form-group' >
        <%= f.date_field :date, value: Date.today, class: 'form-control' %>
      </div>
      <div class='form-group'>
        <%= f.label :time, "勉強時間" %>
        <% if study.time.nil? %>
          <%= f.time_field :time, value: "00:00", class:'form-control' %>
        <% else %>
          <%= f.time_field :time, class:'form-control' %>
        <% end %>
      </div>
      <div class='form-group'>
        <%= f.label :tag, "カテゴリ" %>
        <%= f.collection_select :tag, Combmaster.all, :id, :tag_name, class:'form-control' %>  
      </div>
      <div class='form-group'>
        <%= f.label :content, "内容" %>
        <%= f.text_area :content, class:'form-control' %>  
      </div>
      <%= f.submit '投稿', class:'btn btn-primary' %>
    <% end %>
  </div>
</div>